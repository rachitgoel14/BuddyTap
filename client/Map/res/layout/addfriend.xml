<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg"
    android:paddingTop="150dp" 
   
    
    
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/invite_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/do_email_picker"
        android:hint="Enter E-mail Address"
        android:inputType="textEmailAddress" >
    </EditText>

    <Button
        android:id="@+id/do_email_picker"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:onClick="doLaunchContactPicker"
        android:background="@drawable/browse_bttn"
      >
    </Button>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
         android:layout_marginLeft="220dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/done_bttn"
            android:onClick="done" />

</LinearLayout>

    <EditText
        android:id="@+id/choosegrpname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendInvite"
        android:layout_alignRight="@+id/invite_email"
        android:layout_below="@+id/do_email_picker"
        android:hint="Enter Groupname"
        android:ems="10" >

       
    </EditText>

    <Button
        android:id="@+id/sendInvite"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/do_email_picker"
        android:layout_below="@+id/choosegrpname"
        android:background="@drawable/send_bttn"
        android:onClick="SendEmail" />

</RelativeLayout>